{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist/",
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}